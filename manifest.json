{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    "description": "This extension tracks overall spendings",
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_page": "option.html",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },

    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]

}